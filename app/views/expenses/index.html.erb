<h1>Listing expenses</h1>

<table>
  <tr>
    <th>Cluster name</th>
    <th>Shop name</th>
    <th>Date</th>
    <th>Total</th>
    <th>Adjustable total</th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%=h expense.cluster_name %></td>
    <td><%=h expense.shop_name %></td>
    <td><%=h expense.date %></td>
    <td><%=h expense.total %></td>
    <td><%=h expense.adjustable_total %></td>
    <td><%= link_to 'Show', expense %></td>
    <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
    <td><%= link_to 'Destroy', expense, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New expense', new_expense_path %>