<h1>New expense</h1>

<% form_for(@expense) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :cluster_name %><br />
    <%= f.text_field :cluster_name %>
  </p>
  <p>
    <%= f.label :shop_name %><br />
    <%= f.text_field :shop_name %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>

  <% f.fields_for :expense_perticuler do |child_form| %>

    <%= child_form.label :name %>
    <%= child_form.text_field :amount %>

  <% end %>


  <p>
    <%= f.label :total %><br />
    <%= f.text_field :total %>
  </p>
  <p>
    <%= f.label :adjustable_total %><br />
    <%= f.text_field :adjustable_total %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', expenses_path %>